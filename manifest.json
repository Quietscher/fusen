{
  "manifest_version": 3,
  "name": "付箋メモ",
  "version": "1.0.0",
  "description": "Add sticky notes to any webpage and keep them in place.",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/note16.png",
      "48": "icons/note48.png",
      "64": "icons/note64.png",
      "128": "icons/note128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
